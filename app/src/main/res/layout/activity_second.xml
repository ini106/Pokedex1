<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Bulbasaur"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/index"
        android:layout_alignBottom="@+id/index"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/name"
        android:text="Grass"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/pokemonpic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemonpic"
        android:layout_marginTop="54dp"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/index"
        android:text="Height:" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pokemonpic"
        android:layout_alignTop="@+id/height"
        android:layout_marginEnd="57dp"
        android:textSize="20dp"
        android:text="Weight:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Pokedex Entry:"
        android:layout_below="@+id/height"
        android:layout_alignStart="@+id/height"
        android:layout_alignEnd="@+id/pokemonpic" />

</RelativeLayout>